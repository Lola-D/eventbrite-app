<div class="card ml-5 mr-5 p-5 mt-5">
  <div class="card-header display-4 mt-4-auto mb-3">Modifier ton profil</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "Ton email" ,class: "col-md-4 control-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-6 form-control mb-4" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "Ton mot de passe", class: "col-md-4 control-label" %>
      <small id="passwordHelpInline" class="text-muted">(ne pas remplir si inchang√©)</small>
      <%= f.password_field :password, autocomplete: "new-password", class:"col-md-6 form-control mb-4" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirme ton mot de passe", class: "col-md-4 control-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-6 form-control mb-4" %>
    </div>

      <div class="field">
        <%= f.label :current_password, "Ton mot de passe actuel", class: "col-md-3 control-label" %> <small id="passwordHelpInline" class="text-muted">(obligatoire pour confirmer les modifications)</small>
        <%= f.password_field :current_password, autocomplete: "current-password", class:"col-md-6 form-control mb-4"  %>
      </div>

    <div class="actions">
      <%= f.submit "Enregistrer", class:"btn btn-primary mb-4" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger mt-3 mb-4" %>

  <%= link_to "Retour au profil", :back %>

</div>



