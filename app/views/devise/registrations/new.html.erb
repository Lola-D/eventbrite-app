<div class="card ml-5 mr-5 p-5 mt-5">
  <div class="card-header display-4 mt-4-auto mb-3">S'inscrire</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "Ton email" ,class: "col-md-4 control-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-6 form-control mb-4" %>
    </div>

    <div class="field">
      <%= f.label :password, "Ton mot de passe", class: "col-md-4 control-label" %>
      <% if @minimum_password_length %>
      <small id="passwordHelpInline" class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"col-md-6 form-control mb-4" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirme ton mot de passe", class: "col-md-4 control-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-6 form-control mb-4" %>
    </div>

    <div class="actions">
      <%= f.submit "Confirmer l'inscription", class:"btn btn-primary mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
