<div class="card ml-5 mr-5 p-5 mt-5">
  <div class="card-header display-4 mt-4-auto mb-3">Mot de passe oublié ?</div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "Ton email" ,class: "col-md-4 control-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-6 form-control mb-4" %>
    </div>

    <div class="actions">
      <%= f.submit "Réinitialiser le mot de passe par email", class:"btn btn-primary mt-4 mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>