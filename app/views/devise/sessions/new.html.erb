<div class="card ml-5 mr-5 p-5 mt-5">
  <div class="card-header display-4 mt-4-auto mb-3">Se connecter</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, "Ton email" ,class: "col-md-4 control-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-6 form-control mb-4" %>
    </div>

    <div class="field">
      <%= f.label :password, "Ton mot de passe", class: "col-md-4 control-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"col-md-6 form-control mb-4" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Se connecter", class:"btn btn-primary mt-4 mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

