
<div class="card ml-5 mr-5 p-5 mt-5">
  <div class="card-header display-4 mt-4-auto mb-3 text-center">Tu es bien inscrit à l'événement : <%= @event.title %> !</div>
  <div class="text-center">Rends toi sur ton profil pour voir les détails</div>
  <div class="card-body d-flex justify-content-between mb-5">
    <div class="btn btn-outline-info role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Ton profil", user_path(current_user.id) %></div>
    <div class="btn btn-outline-secondary" role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Créer un event", new_event_path %></div>
    <div class="btn btn-outline-primary" role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Liste des events", events_path %></div>
  </div>
</div>