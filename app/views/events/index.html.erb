  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Créer ou trouver un événement ?</h1>
      <p>Ce site est fait pour toi ! Crée des évévements dans ta ville ou trouve des trucs trop cool à faire !</p>
      <div class="btn btn-outline-info" role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Créer un event", new_event_path %></div>
    </div>
  </div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titre</th>
      <th scope="col">Auteur</th>
      <th scope="col">Commentaires</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <th scope="row"><%= event.id %></th>
        <td><%= link_to event.title, event_path(event.id) %></td>
        <td><%= link_to event.user.first_name, user_path(event.user.id)%></td>
        <td><%= event.comments.count %> commentaires</td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container">

  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4">
        <h2><%= event.title%></h2>
        <p><%= event.description%></p>
        <p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p>
      </div>
    <% end %>
  </div>

  </div>