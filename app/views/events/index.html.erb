<div class="masthead pt-5 mb-5">
  <div class="container">
    <h1 class="display-3 masthead-text">Créer ou trouver un événement ?</h1>
    <p class="masthead-text">Ce site est fait pour toi ! Crée des évévements dans ta ville ou trouve des trucs trop cool à faire !</p>
    <div class="btn btn-masthead" role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Créer un event", new_event_path %></div>
  </div>
</div>

<div class="container">
  <div class="album ">
    <div class="container">
      <div class="row">
        <% @events.each do |event| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <% if event.eventimage.attached? %>
                <img class="bd-placeholder-img card-img-top" width="100%" height="225"><%= image_tag event.eventimage %></img>
              <% else %>
                <img class="bd-placeholder-img card-img-top" width="100%" height="225"></img>
              <% end %>
              <div class="card-body card-event">
                <h2 class="card-text"><%= event.title.capitalize %></h2>
                <p class="card-text"><%= event.description %></p>
                <em class="card-text">Prévu le <%= event.start_date.strftime("%d/%m/%Y")%></em></br>
                  <strong>Créé par <%=link_to event.admin.first_name, user_path(event.admin.id)%></strong></br>
                  <% if event.price == 0 %>
                    <p class="mt-3"><strong>C'est gratuit !</strong></p>
                  <% else %>
                    <p class="mt-3">Participation de <strong><%= event.price %> €</strong></p>
                  <% end %>
                  <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Voir", event_path(event.id)%></button>
                    </div>
                    <small class="text-muted"><td><%= event.attendances.count %> inscrits</td></small>
                  </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
